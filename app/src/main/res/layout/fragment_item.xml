<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/actorImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_launcher_background"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/actorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/actorImage"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/actorImage"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@+id/actorImage"
        android:text="Name"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/actorAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/actorName"
        android:layout_alignStart="@+id/actorName"
        android:text="Age" />
</RelativeLayout>
